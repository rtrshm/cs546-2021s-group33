<a href="/nav">Go back</a>
<h1>Reviews from followed users:</h1>
<ul>
    <br>    
    {{#each reviews}}
    <li>Review of 
        <a href="/games/game/{{this.gameId}}">{{this.gameTitle}}</a>
        by  <a href="/profile/{{this.username}}">{{this.username}}</a>:</li>
        {{#if this.spoiler}}
        <button class="revealSpoiler">This review contains spoilers. Press to view.</button>
        <ul class="reviewPoints" hidden>
            <li>Title: {{this.reviewTitle}}</li>
            <li>Rating: {{this.rating}}</li>
            <li>Recommended: {{this.recommended}}</li>
            <li>Review: {{this.reviewContent}}</li>
            <li>{{this.helpfulCount}} people rated this review Helpful</li>
        </ul>
        {{else}}
        <ul class="reviewPoints">
            <li>Title: {{this.reviewTitle}}</li>
            <li>Rating: {{this.rating}}</li>
            <li>Recommended: {{this.recommended}}</li>
            <li>Review: {{this.reviewContent}}</li>
            <li>{{this.helpfulCount}} people rated this review Helpful</li>
        </ul>
        {{/if}}
    {{/each}}
</ul>

